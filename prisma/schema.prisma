generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model codigoActivacion {
  id             Int      @id @default(autoincrement())
  cod_activacion String   @unique
  type           CODE_TYPE
  singer_rol     CODE_ROL?
  usesLeft       Int
}

enum CODE_TYPE {
  ADMIN
  DIRECTOR
  SINGER
  TEMP
}

enum CODE_ROL {
  SOPRANO
  ALTO
  TENOR
  BAJO
}